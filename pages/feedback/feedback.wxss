/* pages/feedback/feedback.wxss */
page {
  background-color: #ecefeb;
}
.main {
  padding: 20rpx;
}
.main .title {
  margin: 10rpx 0;
}
.main .variety {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.main .variety .variety-item {
  margin: 10rpx 0;
  width: 30%;
  padding: 10rpx 0;
  background-color: white;
  text-align: center;
}
.main .inp-warp {
  background-color: white;
}
.main .inp-warp textarea {
  padding: 20rpx;
}
.main .inp-warp .addImg {
  display: flex;
  padding: 20rpx;
  flex-wrap: wrap;
}
.main .inp-warp .addImg button {
  margin: 0;
  padding: 0;
  height: 100rpx;
  width: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5f8f5;
  color: #ccc;
  font-size: 60rpx;
  font-weight: 800;
  border: 1px solid #dddfdc;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
}
.main .inp-warp .addImg .button-hover {
  color: var(--main-color);
}
.main .inp-warp .addImg .img-warp {
  height: 100rpx;
  width: 100rpx;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.main .inp-warp .addImg .img-warp icon {
  position: absolute;
  right: -22rpx;
  top: -22rpx;
}
.main .inp-warp .addImg .img-warp image {
  width: 100%;
  height: 100%;
  border-radius: 4rpx;
}
.main .submit-warp {
  display: flex;
  flex-direction: row-reverse;
}
.main .submit-warp button {
  font-weight: 500;
  height: 100rpx;
  margin: 0;
  padding: 0;
  background-color: var(--main-color);
  width: 220rpx;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}
