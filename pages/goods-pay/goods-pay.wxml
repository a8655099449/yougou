
<view class="getAddress">

  <view class="addressInfo">
    <view class="userData">
      <view class="name">
      {{address.userName}}

      </view>

      <view class="datail">
        {{address.all}}
      </view>
    </view>
    <view class="phone">
      {{address.telNumber}}
    </view>

  
  </view>
</view>


<view class="cart-content">
  <view class="title">
    购物车
  </view>
  <view class="goods-list">
    <block wx:for="{{cart}}"
      wx:key="goods_id"
    >

      <view class="list-item">
     
        <view class="goods-img">
          <image mode="widthFix" src="{{item.goods_big_logo ? item.goods_big_logo :'/assets/img/noImg.png' }}"  />
        </view>
        <view class="desc">
          <view class="goods-name text_row_2">
            {{item.goods_name}}
          </view>
        
          <view class="handle-warp" >
            <view class="price">
              ￥  {{item.goods_price}}
            </view>

            <view class="count">
            
              <view class="count-num">
              x {{item.count}}
              </view>
            
            </view>
          </view>
        </view>
      </view >
    </block>
  </view>



</view>

<view class="footer-tool">
 
  <view class="price-warp">
    <view class="price">
      合计 <text class="price-num" >￥{{allPrice}}</text>
    </view>
    <view class="desc">
      包含运费
    </view>
  </view>
  <view class="buy-warp" >
    支付（{{allCount}}）
  </view>

</view>